<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
      <!--  View   -->
      <record id="about_publisher_form_view" model="ir.ui.view">
         <field name="name">about.publisher.form</field>
         <field name="model">about.publisher</field>
         <field name="inherit_id" ref="base.view_partner_form" />
         <field name="arch" type="xml">
            <data>
               <xpath expr="//field[@name='category_id']" position="after">
                  <field name="is_book_publisher" />
               </xpath>
            </data>
         </field>
      </record>
      <!-- Menu-->
      <menuitem id="publisher_menu" name="Publisher" parent="top_menu" action="about_publisher_list_action" />
      <!-- Action -->
      <record id="about_publisher_list_action" model="ir.actions.act_window">
         <field name="name">Publisher</field>
         <field name="res_model">about.publisher</field>
         <field name="view_mode">tree,form</field>
      </record>
   </data>
</odoo>
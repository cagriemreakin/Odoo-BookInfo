<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <data>
      <!-- Views -->
      <record model="ir.ui.view" id="publisher_form_view">
         <field name="name">about.publisher.form</field>
         <field name="model">about.publisher</field>
         <field name="arch" type="xml">
            <form string="Publisher Form">
               <group>
                  <field name="name" />
               </group>
            </form>
         </field>
      </record>
      <!-- Action -->
      <record model="ir.actions.act_window" id="publisher_list_action">
         <field name="name">Publisher</field>
         <field name="res_model">about.publisher</field>
         <field name="view_type">form</field>
         <field name="view_mode">tree,form</field>
      </record>
      <!-- Menu -->
      <menuitem id="publisher_menu" name="Publisher" parent="top_menu" action="publisher_list_action" />
   </data>
</odoo>